<div class="grid grid-cols-1 gap-1">

     <%= button_to "Register with email", "/registrations/new", class: "w-full ml-3 bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", method: :get %> 
     <%= button_to "Sign in with email", "/sessions/new", class: "w-full ml-3 bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", method: :get %> 
     <%= button_to "Sign in with Github", "/auth/github", class: "w-full ml-3 bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { turbo: false } %> 
     <%= button_to "Sign in with Google", '/auth/google_oauth2', class: "w-full ml-3 bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", method: :post, :data => {turbo: "false"} %> 

